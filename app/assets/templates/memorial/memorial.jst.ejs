<div class="container">

  <!-- Main component for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <h2>
          Memorial of
          <%= model.escape("prefix") %>
          <%= model.escape("firstName") %>
          <%= model.escape("middleName") %>
          <%= model.escape("lastName") %>
          <%= model.escape("maidenName") %>
        </h2>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-10 col-xs-offset-2 centered-text">
        <% if (model.escape('thumbnailUrl')) { %>
          <img src="<%= model.escape('thumbnailUrl') %>" class="img-responsive img-circle"
          alt='<%= model.escape("firstName") + " " + model.escape("lastName")%>'>
        <% } %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-8 col-xs-offset-2 list-group memorial-info">
        <div class="row row-centered list-group-item memorial-detail">
          <div class="list-group-item-heading textxxMedium col-centered col-xs-12 col-sm-4">Born</div>
          <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
          <%= JST["common/_date"]({
            month: +model.escape("birthMonth"),
            day: +model.escape("birthDay"),
            year: +model.escape("birthYear"),
          }) %>
          </div>
        </div>

        <div class="row row-centered list-group-item memorial-detail">
          <div class="list-group-item-heading textxxMedium col-centered col-xs-12 col-sm-4">Death</div>
          <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
          <%= JST["common/_date"]({
            month: +model.escape("deathMonth"),
            day: +model.escape("deathDay"),
            year: +model.escape("deathYear"),
          }) %>
          </div>
        </div>

        <div class="row row-centered list-group-item memorial-detail">
          <h3 class="list-group-item-heading col-xs-4 col-xs-offset-2">Cemetery</h3>

          <div class="col-xs-10 col-xs-offset-1 list-group">

            <div class="row row-centered list-group-item memorial-detail">
              <div class="list-group-item-heading lead col-centered col-xs-12 col-sm-4">Name</div>
              <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
                <%= model.escape("cemeteryName") %>
              </div>
            </div>
            <div class="row row-centered list-group-item memorial-detail">
              <div class="list-group-item-heading lead col-centered col-xs-12 col-sm-4">City</div>
              <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
                <%= model.escape("cemeteryCityName") %>
              </div>
            </div>
            <div class="row row-centered list-group-item memorial-detail">
              <div class="list-group-item-heading lead col-centered col-xs-12 col-sm-4">County</div>
              <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
                <%= model.escape("cemeteryCountyName") %>
              </div>
            </div>
            <div class="row row-centered list-group-item memorial-detail">
              <div class="list-group-item-heading lead col-centered col-xs-12 col-sm-4">State</div>
              <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
                <%= model.escape("cemeteryStateName") %>
              </div>
            </div>
            <div class="row row-centered list-group-item memorial-detail">
              <div class="list-group-item-heading lead col-centered col-xs-12 col-sm-4">Country</div>
              <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
                <%= model.escape("cemeteryCountryName") %>
              </div>
            </div>
            <div class="row row-centered list-group-item memorial-detail">
              <div class="list-group-item-heading lead col-centered col-xs-12 col-sm-4">ID</div>
              <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
                <%= model.escape("cemeteryId") %>
              </div>
            </div>
          </div>
        </div>

        <div class="row row-centered list-group-item memorial-detail">
          <div class="list-group-item-heading lead col-centered col-xs-12 col-sm-4">Memorial ID</div>
          <div class="list-group-item-text col-centered col-xs-12 col-sm-8">
          <%= model.escape("memorialId") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
